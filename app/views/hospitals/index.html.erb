<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Hospital in home referral</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_hospital_path %>">New</a>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Client title</th>
      <th>Client first name</th>
      <th>Client last name</th>
      <th>Client date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.client_title %></td>
        <td><%= hospital.client_first_name %></td>
        <td><%= hospital.client_last_name %></td>
        <td><%= hospital.client_date_of_birth %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hospital Referral', new_hospital_path %>
